<% departure_airport = @selected_flight.departure.id %>
<% arrival_airport = @selected_flight.arrival.id %>
<% selected_date = @selected_flight.start.strftime('%B %d, %Y') %>
<% scheduled_time = @selected_flight.start.strftime('%H:%M') %>
<% arrival_time = (@selected_flight.start + (@selected_flight.duration/60).to_i.hours).strftime('%H:%M') %>

<section class="hero is-fullheight is-light is-bold">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="columns is-8 is-variable ">
        <div class="column has-text-left">
          <h1 class="title">
            Your trip summary
          </h1>
          <h2 class="subtitle">
            <%= selected_date %> |  - <%= arrival_airport %> | <%= scheduled_time %> - <%= arrival_time %>
          </h2>
        </div>

        <div class="column is-three-fifths has-text-left">
          <%= render "new_booking_form" %>
        </div>
      </div>
    </div>
  </div>
</section>